<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/cmdVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textoPrueba4"
        android:layout_below="@+id/textoPrueba3"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="14dp"
        android:onClick="cmdVolver"
        android:text="Volver" />

    <TextView
        android:id="@+id/textoPrueba3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textoPrueba4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Muestra de la disposicion de los elementos" />

    <TextView
        android:id="@+id/textoPrueba4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textoPrueba3"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="44dp"
        android:text="con un RelativeLayout" />

</RelativeLayout>
